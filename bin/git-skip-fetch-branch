#!/usr/bin/env bash
fail() {
        echo "$@" >&2
        exit 1
}

_get_remote() {
    local remote_str=$(git remote)
    local count=0
    for name in $remote_str; do
        echo $name
        let count=$count+1
    done
    if [ $count -lt 1 ]; then
        fail "ERROR: this repo has no remotes configured. (See 'git remote -v')"
    fi
    if [ $count -gt 1 ]; then
        fail "ERROR: this repo has multiple remotes configured. (See 'git remote -v')"
    fi
    echo $remote_str
}

branch="$1"

test -e .git || fail "Not in a git repo?"
test -n "$branch" || fail "Usage: $0 <branch>"

remote=$(_get_remote)

git config --unset "remote.$remote.fetch" "\\+refs/heads/${branch}:refs/remotes/$remote/${branch}"
# also delete the branch local ref
rm -f .git/refs/remotes/$remote/$branch
